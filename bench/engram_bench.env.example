# Engram benchmark configuration (copy to bench/engram_bench.env)

# Rust bench sizing
ENGRAM_BENCH_EXTENDED=1
ENGRAM_BENCH_EXTREME=0
ENGRAM_BENCH_EVENTS_SCALES=1000000,5000000,10000000,20000000,50000000
ENGRAM_BENCH_SQLITE_MAX_EVENTS=1000000
ENGRAM_BENCH_SQLITE_EVENT_CHUNK=10000
ENGRAM_BENCH_SQLITE_MODE=auto
ENGRAM_BENCH_SQLITE_DIR=target/bench_sqlite
# ENGRAM_BENCH_SQLITE_FILE=/tmp/engram_bench.db
ENGRAM_BENCH_WRITE_EVENTS_SCALES=100000,300000,1000000
ENGRAM_BENCH_WRITE_FACT_SCALES=200,1000,5000
ENGRAM_BENCH_BULK_EVENTS_SCALES=10000,100000
ENGRAM_BENCH_BULK_EVENT_BATCH=500
ENGRAM_BENCH_RESET_DB=1

# Database DSNs
ENGRAM_BENCH_MYSQL_DSN=mysql://user:pass@127.0.0.1:3306/engram
ENGRAM_BENCH_POSTGRES_DSN=postgres://user:pass@127.0.0.1:5432/engram
ENGRAM_BENCH_MYSQL_MAX_EVENTS=50000000
ENGRAM_BENCH_POSTGRES_MAX_EVENTS=50000000

# Python benchmark defaults
ENGRAM_BENCH_EVENTS=2000
ENGRAM_BENCH_ITERATIONS=30
ENGRAM_BENCH_LIST_LIMIT=50

# Python load test defaults
ENGRAM_LOAD_DURATION=300
ENGRAM_LOAD_CONCURRENCY=32
ENGRAM_LOAD_SEED_EVENTS=200000
ENGRAM_LOAD_LIST_LIMIT=200
ENGRAM_LOAD_APPEND_RATIO=0.3
ENGRAM_LOAD_LIST_RATIO=0.4
ENGRAM_LOAD_BUILD_RATIO=0.3
ENGRAM_LOAD_MAX_SAMPLES=10000
ENGRAM_LOAD_MYSQL_DSN=mysql://user:pass@127.0.0.1:3306/engram
ENGRAM_LOAD_POSTGRES_DSN=postgres://user:pass@127.0.0.1:5432/engram

# Python soak test defaults
ENGRAM_SOAK_DURATION=3600
ENGRAM_SOAK_INTERVAL=60
ENGRAM_SOAK_SEED_EVENTS=200000
